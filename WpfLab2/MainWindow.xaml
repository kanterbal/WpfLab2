        </Grid>

        <TextBlock Grid.Row="0" Background="Aquamarine" Text="1 234,567" Margin="5" Padding="5" TextAlignment="Right" FontSize="24" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
